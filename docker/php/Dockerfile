FROM php:8.4-fpm

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π –û–°
RUN apt-get update && apt-get install -y \
    git \
    curl \
    zip \
    unzip \
    libpq-dev \
    libicu-dev \
    libzip-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    && docker-php-ext-install pdo pdo_pgsql intl zip opcache \
    && pecl install redis && docker-php-ext-enable redis \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —Ä–∞–±–æ—á–µ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏
WORKDIR /var/www/html

# üîπ –î–æ–±–∞–≤–ª—è–µ–º EXPOSE (–¥–ª—è —è—Å–Ω–æ—Å—Ç–∏)
EXPOSE 9000

# üîπ (–û–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ) –£–±–µ–¥–∏–º—Å—è, —á—Ç–æ FPM —Å–ª—É—à–∞–µ—Ç 0.0.0.0:9000
# –í –æ–±—Ä–∞–∑–µ php:*-fpm —ç—Ç–æ —É–∂–µ —Ç–∞–∫, –Ω–æ –º–æ–∂–Ω–æ —è–≤–Ω–æ –ø—Ä–æ–≤–µ—Ä–∏—Ç—å:
# –ö–æ–Ω—Ñ–∏–≥ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é: /usr/local/etc/php-fpm.d/www.conf
# –¢–∞–º –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å: listen = 9000 (–∞ –Ω–µ 127.0.0.1:9000)

# –ó–∞–ø—É—Å–∫ PHP-FPM
CMD ["php-fpm"]